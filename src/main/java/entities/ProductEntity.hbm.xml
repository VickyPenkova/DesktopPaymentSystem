<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.ProductEntity" table="Product" schema="DesktopPaymentSystem">
        <id name="productId">
            <column name="productId" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(1000)" length="1000"/>
        </property>
        <property name="price">
            <column name="price" sql-type="decimal(19,4)" precision="19" scale="4"/>
        </property>
    </class>
</hibernate-mapping>